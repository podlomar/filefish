{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "module": "node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.draft*.ts"]
}
